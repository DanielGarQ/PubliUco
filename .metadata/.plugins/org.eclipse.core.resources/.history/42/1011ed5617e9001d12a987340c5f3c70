package co.edu.uco.publiuco.entities;

import java.util.UUID;

import co.edu.uco.publiuco.crosscutting.utils.UtilObject;
import co.edu.uco.publiuco.crosscutting.utils.UtilUUID;

public final class SuscripcionPublicacionEntity {
	
	private UUID identificador;
	private PerfilDTO perfil;
	private PlanPublicacionDTO planPublicacion;
	
	public SuscripcionPublicacionEntity() {
		super();
		setIdentificador(UtilUUID.DEFAULT_UUID);
		setPerfil(PerfilDTO.create());
		setPlanPublicacion(PlanPublicacionDTO.create());
	}
	
	public SuscripcionPublicacionEntity(final UUID identificador, final PerfilDTO perfil, final EscritorDTO escritor) {
		super();
		setIdentificador(identificador);
		setPerfil(perfil);
		setPlanPublicacion(planPublicacion);
	}
	
	public static SuscripcionPublicacionEntity create() {
		return new SuscripcionPublicacionEntity();
	}

	public final UUID getIdentificador() {
		return identificador;
	}

	public final SuscripcionPublicacionEntity setIdentificador(final UUID identificador) {
		this.identificador = UtilUUID.getDefault(identificador);
		return this;
	}

	public final PerfilDTO getPerfil() {
		return perfil;
	}

	public final SuscripcionPublicacionEntity setPerfil(final PerfilDTO perfil) {
		this.perfil = UtilObject.getDefault(perfil, PerfilDTO.create());
		return this;
	}

	public final PlanPublicacionDTO getPlanPublicacion() {
		return planPublicacion;
	}

	public final SuscripcionPublicacionEntity setPlanPublicacion(final PlanPublicacionDTO planPublicacionDTO) {
		this.planPublicacion = UtilObject.getDefault(planPublicacion, PlanPublicacionDTO.create());
		return this;
	}

}
